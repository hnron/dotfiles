    alias pacman='pacapt'
fi

if type nvim > /dev/null 2>&1; then
    alias vim='nvim'
fi
alias vi='vim'
alias v='vim'

if type ccat > /dev/null 2>&1; then
    alias cat='ccat --bg=dark '
fi

